<div class="container">
    <div class="jumbotron jumbotron-fluid">
        <div class="container">
            <h1 class="display-4">Eat-Da-Burger!</h1>
        </div>
    </div>
    <div class="row">
        <div class="col-md-4">
            {{#each burgers}}
                {{#unless devoured}}
                    <div class="card text-white bg-warning mb-3" style="max-width: 18rem;">
                        <div class="card-body">
                            <h5 class="card-title">{{burger_name}}</h5>
                            <p>Calories: {{burger_calories}} Kcal</p>
                            <p class="card-text"><a href="" class="eat-burger" data-id={{id}}><i class="fas fa-hamburger"></i>Devoure It!</a></p>
                        </div>
                    </div>
                {{/unless}}
            {{/each}}
        </div>

        <div class="col-md-4">
            <form class="create-form">
                <div class="form-group">
                    <input type="text"  id ="burgerInput" name="name" placeholder="Input burger">
                    <input type="text" id="caloriesInput" name="calories" placeholder="Input burger's calories">
                </div>
                <button type="submit" class="btn btn-danger">Make my burger</button>
            </form>
        </div>

        <div class="col-md-4">
            {{#each burgers}}
                {{#if devoured}}
                    <div class="card text-white bg-secondary mb-3" style="max-width: 18rem;">
                        <div class="card-body">
                            <h5 class="card-title">{{burger_name}}</h5>
                            <p class="card-text">Devoured</p>
                        </div>
                    </div>
                {{/if}}
            {{/each}}
        </div>
    </div>
</div>